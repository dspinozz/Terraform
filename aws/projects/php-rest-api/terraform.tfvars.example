# ------------------------------------------------------------------------------
# PHP REST API - Example Variables
# Copy to terraform.tfvars and customize
# ------------------------------------------------------------------------------

aws_region  = "us-east-1"
environment = "dev"

# Container
container_image = "ghcr.io/dspinozz/php-rest-api:latest"
cpu             = 256
memory          = 512

# Service scaling
desired_count      = 1
enable_autoscaling = false

# Database (SQLite for dev, PostgreSQL for prod)
database_driver = "sqlite"
database_host   = "localhost"
database_port   = 5432
database_name   = "phpapi"
database_user   = "phpapi"
# database_password = "your-password"

# JWT
# jwt_secret    = "your-secret-here"
jwt_algorithm   = "HS256"
jwt_expiry      = 3600

# API
cors_origins      = "*"
rate_limit_max    = 100
rate_limit_window = 60
