# ------------------------------------------------------------------------------
# Project Management System - Example Variables
# Copy to terraform.tfvars and customize
# ------------------------------------------------------------------------------

aws_region  = "us-east-1"
environment = "dev"

# Container (ASP.NET Core needs more resources)
container_image = "ghcr.io/dspinozz/project-management-system:latest"
cpu             = 512
memory          = 1024

# Service scaling
desired_count      = 1
enable_autoscaling = false

# Application config
database_connection_string = "Data Source=/data/projects.db"
# jwt_secret               = "your-32-char-minimum-secret-here"
jwt_issuer                 = "ProjectManagementSystem"
jwt_audience               = "ProjectManagementSystemAPI"
jwt_expiry_minutes         = 1440
